@page "/"


<PageTitle>Home - GastritisTracker</PageTitle>

<div class="container mt-4">

    <div class="hero-section">
        <h1 class="hero-title">👋 Hola, Emilio</h1>
        <p class="hero-subtitle">
            Welcome to your personal digestive health companion. <br>
            Track patterns, identify triggers, and heal your gut.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="tracker" class="btn btn-light btn-lg rounded-pill fw-bold text-primary shadow">
                🚀 Start Tracking
            </a>
            <a href="https://github.com/tu-usuario/GastritisTracker" target="_blank" class="btn btn-outline-light btn-lg rounded-pill">
                ⭐ GitHub
            </a>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4 text-center mb-3">
            <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                <div class="feature-icon">📝</div>
                <h5>Log Daily</h5>
                <p class="text-muted small">Record your supplements and meals to build a reliable history.</p>
            </div>
        </div>
        <div class="col-md-4 text-center mb-3">
            <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                <div class="feature-icon">📊</div>
                <h5>Analyze Trends</h5>
                <p class="text-muted small">Spot the difference between a "Good Day" and a "Flare-up".</p>
            </div>
        </div>
        <div class="col-md-4 text-center mb-3">
            <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                <div class="feature-icon">👨‍⚕️</div>
                <h5>Medical Export</h5>
                <p class="text-muted small">Generate CSV reports to share with your gastroenterologist.</p>
            </div>
        </div>
    </div>

    <div class="card tip-card shadow-sm border-0 mb-5">
        <div class="card-body p-4">
            <h5 class="text-success fw-bold">
                💡 Gastro Tip of the Day
            </h5>
            <p class="mb-0 fs-5">
                "@DailyTip"
            </p>
        </div>
   </div>

</div>

